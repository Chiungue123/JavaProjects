<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
        
    <context:annotation-config/>

	<bean id="pRef" class="com.javaprojects.aspectorientedprogramming.bean.Product">  
		
		<!-- collaborators and configuration for this bean go here -->
		<property name="id" value="101"/>
		<property name="name" value="Water Bottle"/>
		<property name="price" value="30"/>
		<property name="brand" value="Contigo"/>
		<property name="stock" value="18"/>

	</bean>
	
	<bean id="befAdv" class="com.javaprojects.aspectorientedprogramming.bean.BeforeAdvice"/>  
	<bean id="aftAdv" class="com.javaprojects.aspectorientedprogramming.bean.AfterAdvice"/>  
	
	<bean id="productProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="pRef"></property>
		<property name="interceptorNames">
			<list>
				<value>befAdv</value>
				<value>aftAdv</value>
			</list>
		</property>
	</bean>

</beans>