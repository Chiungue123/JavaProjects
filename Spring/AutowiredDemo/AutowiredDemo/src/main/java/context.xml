<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
        
    <context:annotation-config/>

	<bean id="user" class="com.javaprojects.autowireddemo.bean.User">  
		<!-- collaborators and configuration for this bean go here -->
		<property name="name" value="Roberto"></property>
		<property name="email" value="example@gmail.com"></property>
		<property name="order" ref="order"></property>
		<!-- 
		<constructor-arg ref="order"/>
		<property name="order" ref="order"></property>
		-->
	</bean>

	<bean id="order" class="com.javaprojects.autowireddemo.bean.Order">
		<!-- collaborators and configuration for this bean go here -->
		<property name="orderID" value="76"></property>
		<property name="timeStamp" value="20th October, 2023, 22:00"></property>
		<property name="amount" value="45"></property>
	</bean>

</beans>